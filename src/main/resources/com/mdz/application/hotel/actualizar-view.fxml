<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mdz.application.hotel.controllers.ActualizarReservacion">
   <children>
      <Label layoutX="58.0" layoutY="58.0" text="Ingrese los 3 primers digitos del ID de su Reservacion" />
      <TextField fx:id="idTxt" layoutX="58.0" layoutY="94.0" />
