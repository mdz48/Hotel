      <Button fx:id="saveButton" layoutX="419.0" layoutY="154.0" mnemonicParsing="false" onMouseClicked="#onClickSaveButton" text="Actualizar" />
      <Button fx:id="exitButton" layoutX="434.0" layoutY="214.0" mnemonicParsing="false" onMouseClicked="#onClickExitButton" text="Salir" />
